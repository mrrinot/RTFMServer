{
  "extends": ["airbnb-base", "prettier"],
  "env": {
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "script"
  },
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": "error",
    "class-methods-use-this": "off",
    "camelcase": "off",
    "prefer-destructuring": ["error", { "VariableDeclarator": { "object": true } }]
  }
}
